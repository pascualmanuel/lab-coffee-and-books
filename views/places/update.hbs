<h3>Edit</h3>

<form method="POST" action="/places/{{places._id}}">
  <label>Name</label>
    <input type="text" name="name"  value="{{places.name}}">
    <label>Type</label>
    <select type="text" name="type">
        <option value="cofee shop" >Cofee Shop</option>
        <option value="bookstore">Bookstore</option>
    </select>
     <label>Address</label>
    <input type="text" name="latitude" value="{{places.location.coordinates}}">
    <input type="text" name="longitude" value="{{places.location.coordinates}}">

    <button type="submit" name="" id="submit">Edit</button>
</form> 

